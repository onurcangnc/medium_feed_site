<!DOCTYPE html>
<html lang="en" class="dark">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="google-adsense-account" content="ca-pub-5907670584730847">
  <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-5907670584730847" crossorigin="anonymous"></script>
  <title>{{ site_title }}</title>
  <meta name="description" content="Explore cybersecurity-focused articles by Onurcan Genç.">
  <meta name="keywords" content="Onurcan Genç, Cybersecurity, Pentesting, InfoSec">
  <meta name="author" content="Onurcan Genç">
  <link rel="canonical" href="https://onurcangenc.com.tr/" />
  <meta name="robots" content="index, follow" />
  <meta property="og:title" content="{{ site_title }}">
  <meta property="og:description" content="Explore professional Medium articles by Onurcan Genç.">
  <meta property="og:type" content="website">
  <meta property="og:url" content="https://onurcangenc.com.tr/">
  <meta property="og:image" content="https://onurcangenc.com.tr/static/profile.jpg">
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="{{ site_title }}">
  <meta name="twitter:description" content="Cybersecurity articles and CTFs by Onurcan Genç.">
  <meta name="twitter:image" content="https://onurcangenc.com.tr/static/profile.jpg">
  <link rel="icon" type="image/png" href="/static/profile.jpg">
  <link href="/static/output.css" rel="stylesheet" />
  <script src="https://unpkg.com/scrollreveal"></script>
  <style>
    body::before {
      content: "";
      position: fixed;
      top: 0; left: 0;
      width: 100%; height: 100%;
      background: linear-gradient(135deg, rgba(34,193,195,0.08), rgba(253,187,45,0.05));
      z-index: -1;
      animation: bgparallax 30s ease-in-out infinite alternate;
    }
    @keyframes bgparallax {
      0% { transform: translate(0, 0); }
      100% { transform: translate(-20px, -20px); }
    }
  </style>
</head>
<body class="bg-gray-950 text-white font-sans leading-relaxed">

  <!-- Progress Bar -->
  <div id="progressBar" class="fixed top-0 left-0 h-1 bg-gradient-to-r from-blue-500 to-pink-500 z-[9999] transition-all duration-200" style="width: 0%;"></div>

  <nav class="sticky top-0 z-50 bg-gray-900 bg-opacity-90 shadow-sm border-b border-gray-800 backdrop-blur-md">
    <div class="max-w-7xl mx-auto px-4 py-3 flex flex-wrap justify-between items-center gap-3">
      <h1 class="text-xl font-bold text-blue-400">{{ site_title }}</h1>
      <div class="flex gap-3 items-center ml-auto">
        <select 
          onchange="filterPosts(this.value)" 
          class="text-sm px-3 py-1 bg-gray-800 text-white border border-gray-600 rounded focus:outline-none focus:ring"
        >
          <option value="all">Show All Tags</option>
          {% set all_tags = posts | map(attribute='tags') | sum(start=[]) | unique %}
          {% for tag in all_tags %}
            <option value="{{ tag.term }}">{{ tag.term }}</option>
          {% endfor %}
        </select>
        <button onclick="toggleTheme()" class="text-sm bg-gray-700 px-3 py-1 rounded hover:bg-gray-600 focus:outline-none focus:ring">
          Toggle Theme
        </button>
      </div>
    </div>
  </nav>

  <main class="max-w-7xl mx-auto px-4 py-12">

    <!-- OG Preview -->
    <section class="-mt-12 mb-16">
      <div class="rounded-xl overflow-hidden shadow-lg bg-gray-900 flex flex-col lg:flex-row items-center">
        <img src="/static/profile.jpg" alt="Onurcan Genç OG preview" class="w-40 h-40 rounded-full object-cover mx-auto mt-6" />
        <div class="p-6 flex flex-col items-center text-center space-y-4">
          <h2 class="text-2xl font-bold text-white">Welcome to Onurcan Genç’s Cybersecurity Article Page</h2>
          <p class="text-gray-300">Discover writeups, tools, and real-world pentest experiences.</p>
          <a href="#postsContainer" onclick="smoothScroll(event)">
            <button class="px-4 py-2 bg-gradient-to-r from-blue-600 to-pink-500 hover:from-pink-500 hover:to-blue-600 text-white rounded-full font-medium shadow transition focus:ring-2 focus:ring-blue-500">
              Explore Articles →
            </button>
          </a>
        </div>
      </div>
    </section>

    <!-- Skeleton Loader -->
    <div id="skeletonLoader" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      <div class="bg-gray-800 p-6 rounded-xl animate-pulse h-60"></div>
      <div class="bg-gray-800 p-6 rounded-xl animate-pulse h-60"></div>
      <div class="bg-gray-800 p-6 rounded-xl animate-pulse h-60"></div>
    </div>

    <!-- Posts -->
    <div id="postsContainer" class="scroll-mt-32 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 hidden">
      {% for post in posts %}
      {% if loop.index != 0 and loop.index % 6 == 0 %}
      <div class="col-span-full">
        <ins class="adsbygoogle" style="display:block"
          data-ad-client="ca-pub-5907670584730847"
          data-ad-slot="2345678901"
          data-ad-format="auto"
          data-full-width-responsive="true"
          loading="lazy"></ins>
      </div>
      {% endif %}
      <div class="post-card bg-gray-800 rounded-xl overflow-hidden shadow-md hover:shadow-xl transition-transform transform hover:-translate-y-1 group" data-sr data-tags="{{ post.tags | map(attribute='term') | join(',') }}">
        {% if post.thumbnail %}
        <img src="{{ post.thumbnail }}" alt="{{ post.title }} cover image" class="w-full h-48 object-cover group-hover:scale-105 transition duration-300">
        {% endif %}
        <div class="p-6">
          <div class="text-xs text-gray-400 mb-1">{{ post.published }}</div>
          <h2 class="text-xl font-semibold text-white mb-2 group-hover:text-blue-300">{{ post.title }}</h2>
          <p class="text-sm text-gray-300 mb-4">{{ post.summary | truncate(160, True, "...") }}</p>
          <a href="{{ post.link }}" target="_blank">
            <button class="px-4 py-2 bg-gradient-to-r from-blue-600 to-pink-500 text-white rounded-full font-medium transition hover:from-pink-500 hover:to-blue-600 focus:ring-2 focus:ring-blue-500">
              Read Article →
            </button>
          </a>
        </div>
      </div>
      {% endfor %}
    </div>

    {% if total_pages > 1 %}
    <div class="mt-10 text-center space-x-2">
      {% for page_num in range(1, total_pages + 1) %}
        {% if page_num == current_page %}
          <span class="px-4 py-2 rounded bg-blue-600 text-white font-semibold">{{ page_num }}</span>
        {% else %}
          <a href="{% if page_num == 1 %}/index.html{% else %}/page/{{ page_num }}.html{% endif %}" class="px-4 py-2 rounded bg-gray-700 hover:bg-gray-600 text-white font-semibold">
            {{ page_num }}
          </a>
        {% endif %}
      {% endfor %}
    </div>
    {% endif %}

    <!-- Contact -->
    <div class="mt-12 p-6 bg-gray-800 rounded-xl text-center">
      <h3 class="text-2xl font-semibold mb-2">Reach Out</h3>
      <p class="text-gray-300 mb-4">Have a question or want to connect? Drop your email below.</p>
      <div class="flex flex-col sm:flex-row items-center justify-center gap-3">
        <input type="email" id="userEmail" placeholder="Your email" required class="px-4 py-2 rounded bg-gray-700 text-white focus:outline-none focus:ring-2 focus:ring-blue-500">
        <button onclick="sendMailToMe()" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">Send Message</button>
      </div>
    </div>

    <!-- Footer Ad -->
    <div class="mt-12">
      <ins class="adsbygoogle" style="display:block"
        data-ad-client="ca-pub-5907670584730847"
        data-ad-slot="3456789012"
        data-ad-format="auto"
        data-full-width-responsive="true"
        loading="lazy"></ins>
    </div>
  </main>

<script>
if (localStorage.getItem('theme') === 'light') {
  document.documentElement.classList.remove('dark');
}

function toggleTheme() {
  const html = document.documentElement;
  if (html.classList.contains('dark')) {
    html.classList.remove('dark');
    localStorage.setItem('theme', 'light');
  } else {
    html.classList.add('dark');
    localStorage.setItem('theme', 'dark');
  }
}

function smoothScroll(e) {
  e.preventDefault();
  document.querySelector('#postsContainer')?.scrollIntoView({ behavior: 'smooth', block: 'start' });
}

function filterPosts(tag) {
  const cards = document.querySelectorAll('.post-card');
  if (tag === 'all') {
    cards.forEach(card => card.style.display = 'block');
    return;
  }
  cards.forEach(card => {
    const tags = card.dataset.tags?.toLowerCase() || '';
    const match = tags.split(',').map(t => t.trim()).includes(tag.toLowerCase());
    card.style.display = match ? 'block' : 'none';
  });
}

document.addEventListener("DOMContentLoaded", () => {
  document.getElementById("skeletonLoader").style.display = "none";
  const container = document.getElementById("postsContainer");
  container.classList.remove("hidden");
  container.style.display = "";

  const observer = new IntersectionObserver(entries => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        const ad = entry.target;
        if (!ad.classList.contains("adsbygoogle-loaded")) {
          try {
            (adsbygoogle = window.adsbygoogle || []).push({});
            ad.classList.add("adsbygoogle-loaded");
            observer.unobserve(ad);
          } catch (e) {
            console.warn("AdSense yüklenemedi:", e);
          }
        }
      }
    });
  });

  document.querySelectorAll("ins.adsbygoogle").forEach(ad => observer.observe(ad));

  ScrollReveal().reveal('[data-sr]', {
    distance: '30px',
    origin: 'bottom',
    opacity: 0,
    duration: 800,
    interval: 120,
    reset: false
  });
});

function sendMailToMe() {
  const email = document.getElementById('userEmail').value.trim();
  if (!email) return alert("Please enter your email address.");
  const subject = encodeURIComponent("Cybersecurity Contact via OnurcanGenc.com.tr");
  const body = encodeURIComponent(`Hi I am Onurcan,\n\nMy email: ${email}\nDo not forget to contact with me...`);
  window.location.href = `mailto:onurcangencbilkent@gmail.com?subject=${subject}&body=${body}`;
}
</script>
</body>
</html>
