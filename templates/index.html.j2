<body class="bg-gray-950 text-white font-sans leading-relaxed">
  <!-- âœ… Theme Toggle -->
  <button id="toggle-theme" class="fixed top-4 right-4 p-2 rounded-full bg-gray-800 shadow-xl z-50">ðŸŒ“</button>

  <!-- âœ… Article Cards -->
  <div class="max-w-4xl mx-auto px-4 py-12 space-y-6">
    {% for post in posts %}
      <article class="bg-gray-900 p-6 rounded-lg shadow hover:shadow-xl transition-shadow" data-sr>
        <a href="{{ post.link }}" target="_blank" rel="noopener noreferrer">
