<!DOCTYPE html>
<html lang="en" class="dark">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="google-adsense-account" content="ca-pub-5907670584730847">
  <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-5907670584730847"
  crossorigin="anonymous"></script>
  <!-- ✅ Auto Ads Init -->
  <script>
    (adsbygoogle = window.adsbygoogle || []).push({
      google_ad_client: "ca-pub-5907670584730847",
      enable_page_level_ads: true
    });
  </script>
  <title>{{ site_title }}</title>

  <!-- SEO Meta -->
  <meta name="description" content="Explore cybersecurity-focused articles by Onurcan Genç. CTFs, real-world pentest experiences, and tools.">
  <meta name="keywords" content="Onurcan Genç, Cybersecurity, Pentesting, CTF, InfoSec, Web Security, Medium Articles">
  <meta name="author" content="Onurcan Genç">
  <link rel="canonical" href="https://onurcangenc.com.tr/" />
  <meta name="robots" content="index, follow" />

  <!-- Open Graph -->
  <meta property="og:title" content="{{ site_title }}">
  <meta property="og:description" content="Explore professional Medium articles by Onurcan Genç on cybersecurity.">
  <meta property="og:type" content="website">
  <meta property="og:url" content="https://onurcangenc.com.tr/">
  <meta property="og:image" content="https://onurcangenc.com.tr/static/alvin.jpg">

  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="{{ site_title }}">
  <meta name="twitter:description" content="Cybersecurity articles, CTF writeups, and real-world penetration testing findings by Onurcan Genç.">
  <meta name="twitter:image" content="https://onurcangenc.com.tr/static/alvin.jpg">

  <!-- Favicon -->
  <link rel="icon" type="image/png" href="/static/profile.jpg">
  <link href="/static/output.css" rel="stylesheet" />

  <!-- ScrollReveal.js -->
  <script src="https://unpkg.com/scrollreveal"></script>

  <!-- Google Analytics -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-XXXXXXXXXX"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', 'G-XXXXXXXXXX');
  </script>

  <style>
    body::before {
      content: "";
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(135deg, rgba(34,193,195,0.08), rgba(253,187,45,0.05));
      z-index: -1;
      animation: bgparallax 30s ease-in-out infinite alternate;
    }
    @keyframes bgparallax {
      0% { transform: translate(0, 0); }
      100% { transform: translate(-20px, -20px); }
    }

    .hidden-render-test {
      display: none !important;
      visibility: hidden;
    }
  </style>
</head>
<body class="bg-gray-950 text-white font-sans leading-relaxed">
  <!-- AdSense Init -->
  <script>
    window.addEventListener("load", function () {
      (adsbygoogle = window.adsbygoogle || []).push({});
    });
  </script>

  <!-- 🔍 Hidden block for test validation (won’t affect layout) -->
  <div class="hidden-render-test">
    {% for post in posts %}
      <span>{{ post.title }}</span>
      <span>{{ post.summary }}</span>
    {% endfor %}
  </div>
</body>
</html>
