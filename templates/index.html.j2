<!DOCTYPE html>
<html lang="en" class="dark">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ site_title }}</title>

  <!-- SEO Meta -->
  <meta name="description" content="Brief descriptions of Onurcan Genç's Medium articles." />
  <meta property="og:title" content="{{ site_title }}">
  <meta property="og:description" content="Summaries of Onurcan Genç's latest Medium blog posts.">
  <meta property="og:type" content="website">
  <meta property="og:url" content="https://writeup.onurcangenc.com.tr/">
  <meta property="og:image" content="https://writeup.onurcangenc.com.tr/preview.jpg">

  <!-- Styles & Icons -->
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" crossorigin="anonymous" />

  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    body {
      font-family: 'Inter', sans-serif;
      background: #0f172a;
      min-height: 100vh;
      overflow-x: hidden;
      position: relative;
    }
    .star {
      position: absolute;
      top: -20px;
      color: #fff;
      animation: animate 5s linear forwards;
    }
    .star::before {
      content: "\f005";
      font-family: FontAwesome;
      text-shadow: 0 0 5px #fff, 0 0 20px #fff, 0 0 50px #fff;
    }
    @keyframes animate {
      0% {
        transform: translateY(0) rotate(0deg);
        opacity: 1;
      }
      80% {
        opacity: 1;
      }
      100% {
        transform: translateY(100vh) rotate(360deg);
        opacity: 0;
      }
    }
    .profile-pic {
      width: 100px;
      height: 100px;
      border-radius: 50%;
      object-fit: cover;
      border: 3px solid #3b82f6;
    }
    .social-icons a {
      margin: 0 10px;
      color: #3b82f6;
      font-size: 1.5rem;
      transition: color 0.3s;
    }
    .social-icons a:hover {
      color: #60a5fa;
    }
  </style>
</head>
<body class="text-gray-100">

  <!-- Falling stars -->
  <script>
    function stars() {
      const e = document.createElement("div");
      e.setAttribute("class", "star");
      document.body.appendChild(e);
      e.style.left = Math.random() * window.innerWidth + "px";
      const size = Math.random() * 12;
      const duration = 2 + Math.random() * 3;
      e.style.fontSize = 12 + "px";
      e.style.animationDuration = duration + "s";
      setTimeout(() => e.remove(), 5000);
    }
    setInterval(stars, 80); // Limit frequency for performance
  </script>

  <div class="max-w-3xl mx-auto p-6 relative z-10">
    <div class="bg-gray-900 p-6 rounded-xl shadow text-center mb-10">
      <img src="/static/profile.jpg" alt="Onurcan Genç" class="profile-pic mx-auto mb-4">
      <h1 class="text-3xl font-bold text-indigo-400">Onurcan Genç</h1>
      <p class="text-gray-400 mt-2">Cybersecurity | Penetration Testing | Medium Blogger</p>
      <div class="social-icons flex justify-center mt-4">
        <a href="https://www.linkedin.com/in/onurcangnc/" target="_blank"><i class="fab fa-linkedin"></i></a>
        <a href="https://x.com/onurcangenc1999" target="_blank"><i class="fab fa-twitter"></i></a>
        <a href="https://github.com/onurcangnc" target="_blank"><i class="fab fa-github"></i></a>
      </div>
    </div>

    {% for post in posts %}
      <div class="bg-gray-800 p-6 rounded-xl mb-8 shadow hover:shadow-2xl border border-gray-700">
        <h2 class="text-2xl font-semibold text-white mb-1">{{ post.title }}</h2>
        <p class="text-sm text-gray-400">{{ post.published }}</p>
        <p class="mt-2 text-gray-300">{{ post.summary | striptags }}</p>
        <a href="{{ post.link }}" target="_blank" class="text-indigo-400 hover:underline inline-block mt-3">Medium'da oku →</a>
      </div>
    {% endfor %}

    <div class="flex justify-between mt-10 text-sm">
      {% if current_page > 1 %}
        <a href="{{ '/' if current_page == 2 else '/page/' ~ (current_page - 1) ~ '.html' }}" class="text-indigo-400 hover:underline">← Previous</a>
      {% else %}
        <span></span>
      {% endif %}

      {% if current_page < total_pages %}
        <a href="/page/{{ current_page + 1 }}.html" class="text-indigo-400 hover:underline">Next →</a>
      {% endif %}
    </div>
  </div>
</body>
</html>
